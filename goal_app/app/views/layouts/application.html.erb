<!DOCTYPE html>
<html>
  <head>
    <title>GoalApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if logged_in?%>
        <h1>HELLO <%=current_user.username%></h1>
      <%else%>
        <a href='<%=new_user_url%>'>Sign UP</a>
      <%end%>
    </header>
    <%= yield %>
  </body>
</html>
